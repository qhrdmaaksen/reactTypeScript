{
  "compilerOptions": {
    //target 옵션은 작성한 코드를 어떤 js 버전으로 변환할건지 결정
    "target": "es5",
    //기본 ts 라이브러리, 어떤 타입이 타입스크립트에서 기본으로 지원되는지 결정, dom 은 브라우저에서 사용하는 타입
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    //.js file 포함 여부 결정
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    //strict 옵션은 타입스크립트가 코드를 더 엄격하게 검사하도록 하는 옵션, true 로 설정하면 모든 strict 옵션이 true 로 설정됨
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    //jsx 옵션은 tsx 파일을 어떻게 변환할지 결정
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
